                while True:
                    userinput = input("Choice?>")
                    if userinput == "yes":
                        if weapon == "fists":
                            if gold < 100:
                                print("You don't have enough money! Come back a little richer!")
                            else:
                                print("There we go! A nice accessory!")
                                fistupgrade = 1
                                gold -= 100
                        elif weapon == "sword":
                            if gold < 120:
